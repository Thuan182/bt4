<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nen"
    >
 <ImageView
     android:layout_marginLeft="5dp"
     android:layout_marginTop="20dp"
     android:src="@drawable/cr1"
     android:id="@+id/image5"
     android:layout_width="90dp"
     android:layout_height="90dp"/>
 <TextView
     android:textColor="@color/startyellow"
     android:layout_marginTop="5dp"
     android:gravity="center"
     android:textSize="30dp"
     android:text="Thiều Văn Thuận"/>
 <LinearLayout
     android:gravity="center"
     android:layout_width="100dp"
     android:layout_height="70dp">
  <Button
      android:id="@+id/buttonunfollow"
      android:textSize="20dp"
      android:textColor="	#F0FFFF"
      android:background="@drawable/button1"
      android:layout_marginTop="5dp"
      android:layout_width="150dp"
      android:layout_height="60dp"
      android:text="Unfollow"/>
 </LinearLayout>
 <TextView
     android:textColor="	#DC143C"
     android:layout_marginLeft="10dp"
     android:textSize="20dp"
     android:text="Gợi ý cho bạn "/>
 <TableRow
     android:layout_marginTop="10dp"
     android:background="@color/startyellow">
  <ImageView
      android:layout_marginLeft="5dp"
      android:layout_marginTop="5dp"
      android:src="@drawable/avar"
      android:id="@+id/image"
      android:layout_width="90dp"
      android:layout_height="90dp"/>
  <TextView
      android:textColor="@color/endyellow"
      android:text=" Dinh Quan"
      android:textSize="40dp"
      android:id="@+id/text"
      android:layout_width="wrap_content"
      android:layout_height="100dp" />
 </TableRow>
 <TableRow

     android:layout_marginTop="5dp"
     android:background="@color/startyellow">
  <ImageView
      android:layout_marginLeft="5dp"
      android:layout_marginTop="5dp"
      android:src="@drawable/avar1"
      android:id="@+id/img1"
      android:layout_width="90dp"
      android:layout_height="90dp"/>
  <TextView
      android:textColor="@color/endyellow"
      android:text=" Minh Thuan"
      android:textSize="40dp"
      android:id="@+id/txt1"
      android:layout_width="wrap_content"
      android:layout_height="100dp" />
 </TableRow>
 <TableRow
     android:layout_marginTop="5dp"
     android:background="@color/startyellow">
  <ImageView
      android:layout_marginLeft="5dp"
      android:layout_marginTop="5dp"
      android:src="@drawable/avar2"
      android:id="@+id/img3"
      android:layout_width="90dp"
      android:layout_height="90dp"/>
  <TextView
      android:layout_marginTop="5dp"
      android:textColor="@color/endyellow"
      android:text=" Tan Tien"
      android:textSize="40dp"
      android:id="@+id/txt3"
      android:layout_width="wrap_content"
      android:layout_height="100dp" />

 </TableRow>
 <TableRow
     android:layout_marginTop="5dp"
     android:background="@color/startyellow">
  <ImageView
      android:layout_marginLeft="5dp"
      android:layout_marginTop="5dp"
      android:src="@drawable/avar4"
      android:id="@+id/img4"
      android:layout_width="90dp"
      android:layout_height="90dp"/>
  <TextView
      android:textColor="@color/endyellow"
      android:text=" Minh Thang"
      android:textSize="40dp"
      android:id="@+id/txt4"
      android:layout_width="wrap_content"
      android:layout_height="100dp" />
 </TableRow>

</TableLayout>